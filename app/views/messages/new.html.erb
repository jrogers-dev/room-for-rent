<h2>Compose a New Message</h2>
<br />
<%= form_for(@message, url: user_messages_path) do |f| %>
  <%= render "devise/shared/error_messages", resource: @message %>

  <div class="field">
    <%= f.hidden_field :sender_id, value: params[:user_id] %>
    <%= f.hidden_field :recipient_id, value: params[:recipient_id] %>
    <%= f.hidden_field :application, value: params[:application] %>
    <%= f.hidden_field :property_id, value: params[:property_id] %>
  </div>

  <div class="field">
    <%= f.label :message_content %><br />
    <%= f.text_area :message_content %>
  </div>

  <div class="actions">
    <%= f.submit "Send Message" %>
  </div>
<% end %>
<br />
<%= button_to "Return to Dashboard", user_root_path, method: "get" %>
<%= button_to "Logout", destroy_user_session_path, method: "delete" %>